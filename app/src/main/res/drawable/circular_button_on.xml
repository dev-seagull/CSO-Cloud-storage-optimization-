<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF9800"/>
            <size android:width="104dp" android:height="104dp"/>
            <corners android:radius="52dp"/>
            <gradient
                android:angle="270"
                android:startColor="#FF5722"
            android:endColor="#FFEB3B"
            android:type="linear"/>
        </shape>
    </item>

    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FF9800"/>
            <corners android:radius="50dp"/>
            <stroke
                android:width="2dp"
                android:color="#F57C00"/>
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#FF9800"/>
            <corners android:radius="50dp"/>
            <gradient
                android:angle="270"
                android:startColor="#FF9800"
            android:endColor="#FFC107"
            android:type="linear"/>
        </shape>
    </item>
</layer-list>
