<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6A5ACD"/> <!-- Solid color -->
            <corners android:radius="25dp"/> <!-- Rounded corners -->
            <elevation android:color="#000000" android:radius="5dp"/>
            <stroke android:width="3dp" android:color="#483D8B"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6A5ACD"/>
            <corners android:radius="25dp"/>
            <elevation android:color="#000000" android:radius="5dp"/>
            <stroke android:width="3dp" android:color="#483D8B"/>
        </shape>
    </item>
</selector>
