<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/backgroundShape">
        <shape android:shape="rectangle">
            <solid android:color="#4ED31E" />
            <corners android:topRightRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="100dp" android:bottomLeftRadius="100dp"/>
        </shape>
    </item>

    <item android:id="@+id/shadow">
        <shape android:shape="rectangle">
            <solid android:color="#4ED31E" />
            <corners android:radius="100dp" />
        </shape>
    </item>

</layer-list>
