<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    android:orientation="vertical">

    <include layout="@layout/header"/>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sky_blue"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                tools:context=".MainActivity">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="-40dp"
                    android:src="@drawable/seagulllogo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:alpha="1"
                    android:background="#050505" />


                <LinearLayout
                    android:id="@+id/primaryAccountsButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"></LinearLayout>


                <TextView
                    android:id="@+id/googlePhotosMediaItemsCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:alpha="1"
                    android:background="#050505" />


                <Button
                    android:id="@+id/androidDeviceButton"
                    android:layout_marginTop="20dp"
                    android:clickable="false"
                    android:drawableLeft="@drawable/android_device_icon"
                    android:backgroundTint="#0D47A1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:paddingRight="84dp"
                    android:foregroundGravity="center"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/deviceStorage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="left"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/androidStatistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:alpha="1"
                    android:background="#050505" />

                <Button
                    android:id="@+id/syncToBackUpAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Sync"
                    android:textSize="16sp"
                    app:cornerRadius="100dp"/>

                <TextView
                    android:id="@+id/syncToBackUpAccountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/restoreButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4CAF50"
                    android:text="Restore"
                    android:textSize="16sp"
                    app:cornerRadius="50dp"/>

                <TextView
                    android:id="@+id/restoreTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:alpha="1"
                    android:background="#050505" />

                <LinearLayout
                    android:id="@+id/backUpAccountsButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

        </ScrollView>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>