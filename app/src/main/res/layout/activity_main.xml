                    <LinearLayout
                        android:id="@+id/deviceButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/androidDeviceButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_gray"
                            android:clickable="false"
                            android:drawableLeft="@drawable/android_device_icon"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:id="@+id/directoryUsages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:shadowColor="@color/black"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="5"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="gone"
                            ></TextView>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:alpha="1"
                            android:background="#050505" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/syncButtonsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/circularSyncDetailsButtonContainer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <ImageButton
                                android:id="@+id/syncDetailsButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_button_on"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:id="@+id/syncDetailsButtonText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Sync Details"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/circularButtonContainer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true">
                            <ImageButton
                                android:id="@+id/syncButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_button_off"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:id="@+id/syncButtonText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Sync"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/circularWifiButtonContainer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <ImageButton
                                android:id="@+id/wifiButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_button_off"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:id="@+id/wifiButtonText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Wifi only"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                    </LinearLayout>


                        <LinearLayout
                            android:id="@+id/backUpAccountsButtons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/syncMessageTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="sans-serif-condensed"
                                android:shadowColor="@color/black"
                                android:shadowDx="2"
                                android:paddingRight="0dp"
                                android:paddingLeft="32dp"
                                android:shadowDy="2"
                                android:shadowRadius="5"
                                android:text=""
                                android:textSize="20sp"
                                android:visibility="gone"
                                android:textColor="@color/white" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/waitingSyncGif"
                                android:layout_height="40dp"
                                android:visibility="gone"
                                android:paddingLeft="0dp"
                                />
                        </LinearLayout>

                    </LinearLayout>


            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actionButtonsLayout"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="center"
                android:foregroundGravity="center"
                >

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/syncSwitchMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:fontFamily="sans-serif-condensed"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="Sync"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:thumbTint="#BF2C2C"
                    app:trackTint="#850808" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/wifiOnlySwitchMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:fontFamily="sans-serif-condensed"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="WIFI ONLY"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:thumbTint="#BF2C2C"
                    app:trackTint="#850808" />


