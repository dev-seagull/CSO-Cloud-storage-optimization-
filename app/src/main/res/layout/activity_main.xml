<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="-40dp"
            android:src="@drawable/seagulllogo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="1"
            android:background="#050505" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Login to your main account which will be synced with more accounts for back-up"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/googlelogo"
            android:text="Login"
            android:gravity="center"
            android:backgroundTint="#007ACC"
            android:paddingRight="70dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/loginState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="You haven't logged into your Google account yet"
            android:textSize="16sp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/StorageHorizontalBarChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"></com.github.mikephil.charting.charts.HorizontalBarChart>


        <TextView
            android:id="@+id/googlePhotosMediaItemsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            > </TextView>

        <Button
            android:id="@+id/mediaItemsLayout"
            android:text="Detail of items"
            android:backgroundTint="#007ACC"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            > </Button>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="1"
            android:background="#050505" />


        <TextView
            android:id="@+id/androidDeviceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="16dp"
            android:text="Android device"
            android:gravity="left"
            android:textSize="24sp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/androidStorageBarChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.github.mikephil.charting.charts.HorizontalBarChart>

        <Button
            android:id="@+id/syncAndroidDevice"
            android:text="Sync"
            android:layout_width="match_parent"
            android:backgroundTint="#007ACC"
            android:layout_height="wrap_content"> </Button>

        <ProgressBar
            android:id="@+id/androidImageProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            style="@android:style/Widget.ProgressBar.Horizontal"> </ProgressBar>


        <TextView
            android:id="@+id/androidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/androidMediaItemsButton"
            android:text="Detail of android items"
            android:clickable="true"
            android:backgroundTint="#007ACC"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            > </Button>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:alpha="1"
            android:background="#050505" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Login to your back-up account, so it will be synced with your main account"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnLoginBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#bf8c2e"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/googlelogo"
            android:text="Login to your back-up account"
            android:gravity="center"
            android:paddingRight="70dp"
            android:textSize="18dp" />



        <Button
            android:id="@+id/syncToBackUpAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#bf8c2e"
            android:text="Sync"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/syncToBackUpAccountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />


    </LinearLayout>




</ScrollView>